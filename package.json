{
	"name": "portfolio",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"--- For development ------------------------": "",
		"dev": "vite dev",
		"preview": "vite build && wrangler pages dev .svelte-kit/cloudflare",
		"--- For production -------------------------": "",
		"build": "vite build",
		"test": "npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest run",
		"prepare": "husky install",
		"validate": "run-s \"validate.*\"",
		"validate.fmt": "run-s \"fmt.*\"",
		"validate.lint": "run-s \"lint.*\"",
		"validate.build": "run-s build",
		"fmt.write": "prettier --write \"src/**/*.{ts*,svelte}\"",
		"fmt.check": "prettier --check \"src/**/*.{ts*,svelte}\"",
		"lint.fix": "eslint \"src/**/*.{ts*,svelte}\" --fix",
		"lint.check": "eslint  \"src/**/*.{ts*,svelte}\"  --max-warnings=0",
		"postinstall": "paraglide-js compile --project ./project.inlang",
		"postbuild": "node scripts/post-build.js"
	},
	"devDependencies": {
		"@iconify-json/flag": "^1.1.47",
		"@iconify-json/logos": "^1.1.42",
		"@iconify-json/lucide": "^1.1.159",
		"@inlang/paraglide-js": "^1.2.1",
		"@inlang/paraglide-js-adapter-vite": "^1.2.7",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-cloudflare": "^4.1.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/typography": "^0.5.10",
		"@types/eslint": "8.56.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.17",
		"cva": "npm:class-variance-authority@^0.7.0",
		"daisyui": "^4.6.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-svelte": "^2.35.1",
		"eslint-plugin-unused-imports": "^3.0.0",
		"husky": "^8.0.3",
		"iso-639-1": "^3.1.0",
		"lint-staged": "^15.2.0",
		"mdsvex": "^0.11.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.33",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"rehype-slug": "^6.0.0",
		"remark-toc": "^9.0.0",
		"remark-unwrap-images": "^4.0.0",
		"schema-dts": "^1.1.2",
		"shiki": "^0.14.7",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"svelte-sitemap": "^2.6.0",
		"tailwind-merge": "^2.2.0",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"unplugin-icons": "^0.18.3",
		"vite": "^5.0.3",
		"vite-imagetools": "^6.2.9",
		"vitest": "^1.2.0",
		"wrangler": "^3.23.0"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "npm@10.2.3",
	"lint-staged": {
		"**/src/**/*.{ts,svelte}": [
			"eslint --fix",
			"eslint --max-warnings=0",
			"prettier --write",
			"prettier --check"
		]
	}
}
